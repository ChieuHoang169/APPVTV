<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:keepScreenOn="true"
        android:background="@android:color/transparent">

    <View android:layout_width="0.1dp"
          android:layout_height="0.1dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/viewScaleTop"
          app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
            android:id="@+id/rlVideoPlayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewScaleTop"
            app:layout_constraintHorizontal_bias="0.0">
        <com.google.android.exoplayer2.ui.VideoPlayerView
                android:id="@+id/videoPlayer"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <include layout="@layout/layout_media_controller"/>

        <com.comix.overwatch.HiveProgressView
                android:id="@+id/loadingView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:hive_animDuration="5000"
                app:hive_color="@color/colorRed"
                app:hive_maxAlpha="255"
                app:hive_cornerRadius="2"
                app:hive_shrink="true"
                android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/llTitle"
            android:layout_toEndOf="@id/rlVideoPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackButton"
            app:layout_constraintStart_toEndOf="@+id/rlVideoPlayer"
            app:layout_constraintRight_toRightOf="@id/rlVideoPlayer"
            app:layout_constraintBottom_toTopOf="@+id/webDetail"
            app:layout_constraintTop_toTopOf="@+id/rlVideoPlayer" >

        <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_title"
                android:text="Căn nhà ma quái"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:background="@color/colorBackButton"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/img_pause_detail"
                android:src="@drawable/ic_pause_white_24dp"
                android:layout_toRightOf="@+id/tv_title"
                android:background="@color/colorBackButton"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/img_close_detail"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_toRightOf="@+id/img_pause_detail"
                android:background="@color/colorBackButton"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </LinearLayout>

    <WebView
            android:id="@+id/webDetail"
            android:background="@color/colorWhite"
            android:layout_below="@+id/rlVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/rlVideoPlayer"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
            android:id="@+id/flShimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/rlVideoPlayer"
            app:layout_constraintBottom_toBottomOf="parent">
        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:background="@color/colorWhite">

                <TextView android:layout_width="match_parent"
                          android:layout_margin="16dp"
                          android:layout_height="120dp"
                          android:background="@drawable/shape_shimmer"/>

                <TextView android:layout_width="match_parent"
                          android:layout_margin="16dp"
                          android:layout_height="120dp"
                          android:background="@drawable/shape_shimmer"/>

                <TextView android:layout_width="match_parent"
                          android:layout_margin="16dp"
                          android:layout_height="120dp"
                          android:background="@drawable/shape_shimmer"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </FrameLayout>

    <include android:id="@+id/failedView"
             layout="@layout/layout_failed"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:visibility="gone"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>