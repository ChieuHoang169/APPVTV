<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackButton">

    <View
          android:id="@+id/viewItemWatch"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.exoplayer2.ui.VideoPlayerView
            android:id="@+id/videoPlayerItemWatch"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </com.google.android.exoplayer2.ui.VideoPlayerView>

    <RelativeLayout
            android:id="@+id/includeItemWatch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/videoPlayerItemWatch"
            app:layout_constraintStart_toStartOf="@+id/videoPlayerItemWatch"
            app:layout_constraintBottom_toBottomOf="@+id/videoPlayerItemWatch"
            app:layout_constraintTop_toBottomOf="@+id/viewItemWatch">
        <ImageView
                android:id="@+id/imgPlayItemDiscover"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />

        <RelativeLayout
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/tvCurrentTimeItemDiscover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="1:15"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:id="@+id/imgZoomOutItemDiscover"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_expand"
                    android:layout_alignParentEnd="true"/>

            <TextView
                    android:id="@+id/tvDurationItemDiscover"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1:15"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imgZoomOut"/>
        </RelativeLayout>

        <ProgressBar
                android:id="@+id/progress_bar_videoItemDiscover"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:progressDrawable="@drawable/drawable_video_progress"
                android:max="100"
                android:progress="20"
                android:visibility="visible"/>
    </RelativeLayout>

    <com.comix.overwatch.HiveProgressView
            android:id="@+id/loadingViewItemWatch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:hive_animDuration="5000"
            app:hive_color="@color/colorRed"
            app:hive_maxAlpha="255"
            app:hive_cornerRadius="2"
            app:hive_shrink="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/videoPlayerItemWatch"
            app:layout_constraintStart_toStartOf="@+id/videoPlayerItemWatch"
            app:layout_constraintBottom_toBottomOf="@+id/videoPlayerItemWatch"
            app:layout_constraintTop_toTopOf="@id/viewItemWatch"/>
    <TextView
            android:id="@+id/tvTimeDate"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13dp"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/videoPlayerItemWatch"
            app:layout_constraintEnd_toStartOf="@+id/btnRemind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/btnRemind"
            android:layout_marginStart="16dp"/>
    <Button
            android:id="@+id/btnRemind"
            android:text="Nhắc tôi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_notifications_white_24dp"
            android:background="@color/colorBackGray"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/videoPlayerItemWatch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/tvTitle"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRemind"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/tvTimeDate" android:layout_marginStart="16dp"/>
    <TextView
            android:id="@+id/tvContent"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginTop="8dp"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="@+id/btnRemind" android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/tvAction"
            android:text="Hành động"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContent"
            app:layout_constraintStart_toStartOf="@+id/tvContent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:id="@+id/tvAdventure"
            android:text="Phiêu lưu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/tvAction"
            app:layout_constraintTop_toTopOf="@+id/tvAction"
            app:layout_constraintBottom_toBottomOf="@+id/tvAction"/>
    <TextView
            android:id="@+id/tvDrama"
            android:text="Chính kịch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/tvAdventure"
            app:layout_constraintTop_toTopOf="@+id/tvAdventure"
            app:layout_constraintBottom_toBottomOf="@+id/tvAdventure"/>

</androidx.constraintlayout.widget.ConstraintLayout>