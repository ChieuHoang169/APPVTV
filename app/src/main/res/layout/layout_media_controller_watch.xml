<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:background="@drawable/shape_shimmer"
                android:id="@+id/rlMediaControllerDX"
                android:visibility="gone">
    <ImageView
            android:id="@+id/imgPlayDX"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pause" />

    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/tvCurrentTimeDX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="1:15"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"/>

        <ImageView
                android:id="@+id/imgZoomOutDX"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_expand"
                android:layout_alignParentEnd="true"/>

        <TextView
                android:id="@+id/tvDurationDX"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1:15"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imgZoomOut"/>
    </RelativeLayout>

    <ProgressBar
            android:id="@+id/progress_bar_videoDX"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/drawable_video_progress"
            android:max="100"
            android:progress="20"
            android:visibility="visible"/>
</RelativeLayout>